<Project Sdk="Microsoft.NET.Sdk" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageId>TwitchLib.Unity</PackageId>
    <Version>1.0.1</Version>
    <Description>Unity wrapper system for TwitchLib</Description>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <Authors>LuckyNoS7evin</Authors>
    <Company>TwitchLib</Company>
    <PackageIconUrl>https://colejelinek.com/dev/twitchlib.png</PackageIconUrl>
    <PackageProjectUrl>https://github.com/TwitchLib/TwitchLib.Unity</PackageProjectUrl>
    <PackageLicenseUrl>https://opensource.org/licenses/MIT</PackageLicenseUrl>
    <Copyright>Copyright 2019</Copyright>
    <PackageReleaseNotes>Major Update of TwitchLib.</PackageReleaseNotes>
    <RepositoryUrl>https://github.com/TwitchLib/TwitchLib.Unity</RepositoryUrl>
    <RepositoryType>Git</RepositoryType>
    <PackageTags>twitch library unity3d unity dotnet c# csharp net standard 2.0</PackageTags>
    <NeutralLanguage>en-US</NeutralLanguage>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.0</FileVersion>
    <CopyLocalLockFileAssemblies>true</CopyLocalLockFileAssemblies>
  </PropertyGroup>

  <Target Name="FilterCopyLocalItems" AfterTargets="ResolveLockFileCopyLocalProjectDeps">
    <ItemGroup>
      <ReferenceCopyLocalPaths Remove="@(ReferenceCopyLocalPaths)" Condition="$([System.String]::Copy('%(Filename)').Contains('System.'))" />
      <ReferenceCopyLocalPaths Remove="@(ReferenceCopyLocalPaths)" Condition="'%(Filename)' == 'Microsoft.CSharp'" />
      <ReferenceCopyLocalPaths Remove="@(ReferenceCopyLocalPaths)" Condition="'%(Filename)' == 'Microsoft.Extensions.DependencyInjection.Abstractions'" />
      <ReferenceCopyLocalPaths Remove="@(ReferenceCopyLocalPaths)" Condition="'%(Filename)' == 'Microsoft.Extensions.Logging'" />
      <ReferenceCopyLocalPaths Remove="@(ReferenceCopyLocalPaths)" Condition="'%(Filename)' == 'Microsoft.Extensions.Options'" />
      <ReferenceCopyLocalPaths Remove="@(ReferenceCopyLocalPaths)" Condition="'%(Filename)' == 'Microsoft.Extensions.Primitives'" />
      <ReferenceCopyLocalPaths Remove="@(ReferenceCopyLocalPaths)" Condition="'%(Filename)' == 'Serilog'" />
      <ReferenceCopyLocalPaths Remove="@(ReferenceCopyLocalPaths)" Condition="'%(Filename)' == 'Serilog.Extensions.Logging'" />
    </ItemGroup>
  </Target>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DefineConstants>RELEASE;NET452</DefineConstants>
    <GenerateSerializationAssemblies>Off</GenerateSerializationAssemblies>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>
  <ItemGroup>
    <PackageReference Include="ILMerge" Version="2.14.1208" />
    <PackageReference Include="Serilog.Extensions.Logging" Version="2.0.2" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="UnityEngine">
      <HintPath>..\Assemblies\UnityEngine.dll</HintPath>
      <Private>false</Private>
    </Reference>
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="..\Assemblies\ilmerge /out:$(OutDir)TwitchLib.Unity.dll $(OutDir)TwitchLib.Unity.dll $(OutDir)Microsoft.Extensions.Logging.Abstractions.dll $(OutDir)Newtonsoft.Json.dll $(OutDir)TwitchLib.Api.Core.dll $(OutDir)TwitchLib.Api.Core.Enums.dll $(OutDir)TwitchLib.Api.Core.Interfaces.dll $(OutDir)TwitchLib.Api.Core.Models.dll $(OutDir)TwitchLib.Api.dll $(OutDir)TwitchLib.Api.Helix.dll $(OutDir)TwitchLib.Api.Helix.Models.dll $(OutDir)TwitchLib.Api.V5.dll $(OutDir)TwitchLib.Api.V5.Models.dll $(OutDir)TwitchLib.Client.dll $(OutDir)TwitchLib.Client.Enums.dll $(OutDir)TwitchLib.Client.Models.dll $(OutDir)TwitchLib.Communication.dll $(OutDir)TwitchLib.PubSub.dll&#xD;&#xA;del $(OutDir)TwitchLib.Unity.deps.json&#xD;&#xA;del $(OutDir)TwitchLib.Unity.pdb&#xD;&#xA;del $(OutDir)Microsoft.Extensions.Logging.Abstractions.dll&#xD;&#xA;del $(OutDir)Newtonsoft.Json.dll&#xD;&#xA;del $(OutDir)TwitchLib.Api.Core.dll&#xD;&#xA;del $(OutDir)TwitchLib.Api.Core.Enums.dll&#xD;&#xA;del $(OutDir)TwitchLib.Api.Core.Interfaces.dll&#xD;&#xA;del $(OutDir)TwitchLib.Api.Core.Models.dll&#xD;&#xA;del $(OutDir)TwitchLib.Api.dll&#xD;&#xA;del $(OutDir)TwitchLib.Api.Helix.dll&#xD;&#xA;del $(OutDir)TwitchLib.Api.Helix.Models.dll&#xD;&#xA;del $(OutDir)TwitchLib.Api.V5.dll&#xD;&#xA;del $(OutDir)TwitchLib.Api.V5.Models.dll&#xD;&#xA;del $(OutDir)TwitchLib.Client.dll&#xD;&#xA;del $(OutDir)TwitchLib.Client.Enums.dll&#xD;&#xA;del $(OutDir)TwitchLib.Client.Models.dll&#xD;&#xA;del $(OutDir)TwitchLib.Communication.dll&#xD;&#xA;del $(OutDir)TwitchLib.PubSub.dll" />
  </Target>
</Project>
